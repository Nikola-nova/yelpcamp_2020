<%- include("../partials/header") %>

<div class="row">
    <div class="col-md-4">
        <h1><%= user.firstName + " " + user.lastName %></h1>
        <h2 class="text-center"><%= user.username %></h2>
        <div class="thumbnail">
            <img src="<%= user.avatar %>" alt="user profile image">
            <div class="caption">
                <a href="mailto:<%= user.email %>"><%= user.email %></a>
                <h2 class="mt-3">About Me</h2>
                <p><%= user.description %></p>
                <% if (currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
                <a href="/users/<%= user._id %>/edit" class="btn btn-xs btn-warning mb-3">Edit User Details</a>
                <form class="delete-form" action="/users/<%= user._id %>/?_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-xs btn-danger mb-3" value="Delete User" />
                </form>
                <% } %>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <h3><%= user.username %>'s campgrounds:</h3>
        <ul>
            <% campgrounds.map(campground => { %>
                <li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
            <% }) %>
        </ul>
    </div>
</div>

<%- include("../partials/footer") %>