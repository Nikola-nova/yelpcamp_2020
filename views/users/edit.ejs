<%- include("../partials/header") %>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1 style="text-align: center;">Edit Your Profile</h1>
	</div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form
			action="/users/<%= user._id %>/?_method=PUT"
			method="POST"
		>
			<div class="form-group">
				<label for="avatar">Avatar URL</label>
				<input
					class="form-control"
					type="text"
					name="user[avatar]"
					id="avatar"
					value="<%= user.avatar %>"
				/>
			</div>
			<div class="form-group">
				<label for="firstName">First Name</label>
				<input
					class="form-control"
					type="text"
					name="user[firstName]"
					id="firstName"
					value="<%= user.firstName %>"
				/>
			</div>
			<div class="form-group">
				<label for="lastName">Last Name</label>
				<input
					class="form-control"
					type="text"
					name="user[lastName]"
					id="lastName"
					value="<%= user.lastName %>"
				/>
			</div>
			<div class="form-group">
				<label for="email">Email</label>
				<input
					class="form-control"
					type="email"
					name="user[email]"
					id="email"
					value="<%= user.email %>"
				/>
			</div>
			<div class="form-group">
				<label for="description">Email</label>
				<input
					class="form-control"
					type="text"
					name="user[description]"
					id="description"
					value="<%= user.description %>"
				/>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Update</button>
			</div>
		</form>
		<a href="/users/<%= user._id %>">Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>
